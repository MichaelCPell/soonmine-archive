<div class="row">
  <div class="row center-text">
    <h2>Sign in</h2>
  </div>

  <div class="row">
    <div class="large-4 large-centered columns center-text user-signup-block">

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

      <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: "button expand" %>
      
      <%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter), class: "button expand" %>

      <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2), class: "button expand" %>

      <%= f.email_field :email, :autofocus => true, placeholder: "Email Address" %>

      <%= f.password_field :password, placeholder: "Password" %>

      <div class="row">
        <div class="large-8 columns">
          <p><%= link_to "Forgot Your Password?", new_user_password_path %></p>
        </div>
        <div class="large-4 columns">
            <div class="large-5 push-1">
              <%= f.submit "Sign in", class: "button small" %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



