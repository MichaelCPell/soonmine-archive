<% states_array = 
%W(Alabama Alaska Arizona Arkansas California Colorado Connecticut Delaware Florida Georgia Hawaii Idaho Illinois Indiana Iowa Kansas Kentucky Louisiana Maine Maryland Massachusetts Michigan Minnesota Mississippi Missouri Montana Nebraska Nevada New\sHampshire New\sJersey New\sMexico New\sYork North\sCarolina North\sDakota Ohio Oklahoma Oregon Pennsylvania Rhode Island South\sCarolina South\sDakota Tennessee Texas Utah Vermont Virginia Washington West\sVirginia Wisconsin Wyoming)
%>
<div class="sign-up-wrap">

<div class="row">
  <div class="row">
    <div class="large-4 large-centered columns center-text">
        <h2>Email Sign Up</h2>
    </div>
  </div>

  <div class="row">
    <div class="large-4 large-centered columns user-signup-block signup-form-wrap">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: "custom" }) do |f| %>
        <%= devise_error_messages! %>

        <div class="row">
          <div class="large-4 columns">
            <%= f.label :firstname, class: "inline" %>
          </div>
          <div class="large-8 columns">
            <%= f.text_field :firstname %>
          </div>
        </div>

        <div class="row">
          <div class="large-4 columns">
            <%= f.label :lastname, class: "inline" %>
          </div>
          <div class="large-8 columns">
            <%= f.text_field :lastname %>
          </div>
        </div>


        <div class="row">
          <div class="large-4 columns">
            <%= f.label :email, "Email Address", class: "inline" %>
          </div>
          <div class="large-8 columns">
            <%= f.text_field :email %>
          </div>
        </div>

        <div class="row">
          <div class="large-4 columns">
            <%= f.label :street, "Steet Address", class: "inline" %>
          </div>
          <div class="large-8 columns">
            <%= f.text_field :zipcode %>
          </div>
        </div>


        <div class="row">
          <div class="large-4 columns">
            <%= f.label :state, class: "inline" %>
          </div>
          <div class="large-8 columns">
            <%= f.select(:state, states_array, {}, class: "small button dropdown") %>
          </div>
        </div>

        <div class="row">
          <div class="large-4 columns">
            <%= f.label :town, class: "inline" %>
          </div>
          <div class="large-8 columns">
            <%= f.text_field :town %>
          </div>
        </div>

        <div class="row">
          <div class="large-4 columns">
            <%= f.label :zipcode, class: "inline" %>
          </div>
          <div class="large-8 columns">
            <%= f.text_field :zipcode %>
          </div>
        </div>

        <div class="row">
          <div class="large-4 columns">
            <%= f.label :birthday, class: "inline" %>
          </div>
          <div class="large-8 columns">
            <%= f.date_select :birthday,{ 
                              order: [:day, :month, :year], 
                              start_year: 1913, 
                              end_year: 2003},
                              {:class => "small button dropdown"} %>
          </div>
        </div>


        <div class="row">
          <div class="large-4 columns">
            <%= f.label :password, class: "inline" %>
          </div>

          <div class="large-8 columns">
            <%= f.password_field :password %>
          </div>
        </div>

        <div class="row">
          <div class="large-4 columns">
            <%= f.label :confirmation, class: "inline" %>
          </div>

          <div class="large-8 columns">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>

        <div><%= f.submit "Sign up", class: "button small push-9" %></div>
      <% end %>
    </div>    
  </div>
</div>

</div><!-- end signup wrap -->