<div class="contain-to-grid">
  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <h1><%= link_to "SoonMine", root_path %></h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <% if current_user %>
          <li class="divider"/>
          <li>
            <%= link_to image_tag(current_user.image_url, width: 50), "#", style: "line-height: 0px;" %>
          </li>

          <% if current_user.firstname %>
            <li><%= link_to current_user.fullname, current_user %></li>
          <% else %>
            <li><%= link_to current_user.email, current_user %></li>

          <% end %>
                        
          <li class="divider"/>
          <li><%= link_to "Log Out", destroy_user_session_path, method: "delete" %></li>
        <% else %>
          <li><%= link_to "Log In", new_user_session_path %></li>
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <% end %>
        <li class="divider"/>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to image_tag("search.png", width: 30, class: "search-icon"), users_path %></li>

      </ul>
    </section>
  </nav>
</div>