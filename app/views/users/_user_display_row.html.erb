<div class="user-diplay-row row">
  <div class="large-3 columns">
    <p><%= link_to user.fullname, user, class: "row-user-name" %></p>
  </div>



  <div class="large-7 columns">
    <div class="row">
      <div class="row-user-image-container large-2 columns">
        <%= image_tag user.image_url, class: "row-user-image" %>
      </div>
      <%= render partial: "row_product_display", 
      collection: user.primary_list.products.limit(5), 
      as: :product, locals: {user: user} %>
      <div class="large-offset-<%= (5 - user.primary_list.products.length) if user.primary_list.products.length <= 5 %>">
      </div>
    </div>
  </div>

  <div class="large-2 columns">
  </div>
</div>