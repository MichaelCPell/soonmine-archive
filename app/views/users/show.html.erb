<div class="row">

  <div class="responsive-sort-menu">
    <span>Sort</span>
  </div>
  <ul class="large-block-grid-4 products-grid-list">
    <li>
      <div class="user-profile-block">
        <div class="block-user-image">
          <%= image_tag @user.image_url %>
        </div>
        <div class="block-user-info">
          <p class="uppercase"><%= @user.fullname.present? ? @user.fullname : @user.email %></p>
          <p><%= "#{@user.town}, #{@user.state}" rescue "No Location Provided" %></p>
        </div>
      </div>
    </li>

    <%= render partial: "users/product_block", collection: @list, as: :product %>

  </ul>
</div>

<div id="sort-container">

<div class="sort-show-wrap">
     <%= link_to "SORT", "#", id: "sort-show" %>
</div>
 
  <div id="sort-contents">
    <form>
      <% %W(date lowest highest need really\swant want).each do |sort_value| %>
      <div class="sort-filter">

        <input type="radio" name="sort" 
               data-target= "<%= user_path(@user, sort: sort_value.split[0])%>"
               <%= "checked" if params[:sort] == sort_value.split[0] %>>
          <%= sort_value.camelize %>
        </input>
      </div>

      <% end %>
    </form>  
  </div>
</div>

<a href="#" class="scrollup">Scroll</a>

<% content_for :header do %>
  <div class="row header">

  </div>
<% end %>












